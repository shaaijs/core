    <link rel="shortcut icon" type="image/png" href="https://i.imgur.com/84eLRd5s.jpg" />
    <link href="https://fonts.googleapis.com/css?family=Source+Code+Pro&display=swap" rel="stylesheet">
    <link rel="stylesheet" type="text/css" href="https://unpkg.com/@shaai/scroll-ink/dist/main.css">
    <script src="https://unpkg.com/@shaai/scroll-ink/dist/main.js"></script>
    <!-- Global site tag (gtag.js) - Google Analytics -->
    <script async src="https://www.googletagmanager.com/gtag/js?id=UA-145877885-1"></script>
    <script>
    window.dataLayer = window.dataLayer || [];
    function gtag(){dataLayer.push(arguments);}
    gtag('js', new Date());

    gtag('config', 'UA-145877885-1');
    </script>

</head>
<body>
    <div id="root"><div style="margin: auto; width: 90vw; height: 100vh; display: flex; justify-content: center; align-items: center"><p>üíÜ‚Äç‚ôÄÔ∏èLoading...</p></div></div>
    <script>
        let blogCode = '<%= data.user && data.user.blogCode %>'
        if(!blogCode)  {
            alert('No blog');
            return;
        }
        let s = new ScrollInk({
            source: {
                name: 'CMS',
                config: {
                    blogCode
                }
            },
            basePath: '/blog',
            root: 'shaai_root',
            postPreviewSize: 100,
            blogHeader: {
                title: `Shaai - Blog`
            },
            profile: {
                image: 'https://i.imgur.com/p0yklHL.jpg',
                title: 'Mohit Karekar',
                bio: 'Writing Shaai at the moment.'
            },
            globalHeader: true,
            globalNav: true,
            globalProfile: true
        })
        window.onload = function() {
            s.load()
            s.subscribe(function(dom) {
                document.getElementById('root').innerHTML = ''
                document.getElementById('root').append(dom)
            })
        }
    </script>
</body>
</html>
